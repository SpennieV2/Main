<style>
  
  .BannerSection {
     background: #fbf6f0 !important;
    padding: 70px 0;
   }
  .BannerSection .BannerTxtMd {
    margin: 0 auto;
    max-width: 718px;
    padding-bottom: 70px;
    text-align: center;
    width: 100%;
  }
  .BannerSection .BannerTxtMd h2 {
    color: #000;
    font-size: 33px;
    font-weight: 400;
    line-height: 41px;
    margin: 0 0 18px;
    text-align: center;
  }
  .BannerSection .BannerTxtMd p {
    color: #000;
    font-size: 14px;
    letter-spacing: .01em;
    line-height: 24px;
    margin: 0 auto 1px;
    max-width: 718px;
    padding: 0;
    text-align: center;
    width: 100%;
   }
  .AboutSection {
    display: flex;
    flex-wrap: wrap;
   }
  .AboutSection .LeftSection {
    align-items: center;
    background-color: #000;
    box-sizing: border-box;
    display: flex;
    padding: 40px 70px;
    width: calc(100% - 740px);
  }
  .AboutSection .LeftSection .Heading {
    color: #fff;
    font-family: Contane;
    font-size: 33px;
    font-weight: 400;
    line-height: 41px;
    margin: 0 0 32px;
  }
  .AboutSection .LeftSection p {
    color: #fff;
    font-family: Neue Haas Unica W1G;
    font-size: 14px;
    font-style: normal;
    font-weight: 300;
    letter-spacing: .01em;
    line-height: 31px;
    margin: 0 0 28px;
    width: 100%;
  }
  .AboutSection .RigntSection {
    width: 740px;
   }
  .AboutSection .RigntSection .AboutImage {
    height: 100%;
    padding-top: 124%;
    position: relative;
   }
  .AboutSection .RigntSection .AboutImage img {
    bottom: 0;
    height: 100%;
    left: 0;
    object-fit: cover;
    position: absolute;
    right: 0;
    top: 0;
    width: 100%;
   }
@media screen and (max-width: 767px) {
  .AboutSection .RigntSection {
      width: 100%;
  }
  .AboutSection .LeftSection {
    padding: 50px 20px;
    width: 100%;
  }
  .AboutSection {
    flex-direction: column-reverse;
   }
}
</style>
<div style="min-height: 400px;">
    <section class="BannerSection">
        <div class="BannerTxtMd BannerTxtLg">
            <h2>{{ section.settings.heading }}</h2>
            <p class="mb-4">{{ section.settings.para1 }}</p>
            <p>{{ section.settings.para2 }}</p>
        </div>
    </section>
    <section class="AboutSection">
        <div class="LeftSection">
            <div>
                <h3 class="Heading">{{ section.settings.heading2 }}</h3>
                <p>{{ section.settings.para3}}</p>
                <p>{{ section.settings.para4}}</p>
                <p>{{ section.settings.para5}}</p>
            </div>
        </div>
        <div class="RigntSection">
            <div class="AboutImage">  <img src="https://cdn.shopify.com/s/files/1/0662/4061/0549/files/Banner_imge_4_v2_4.png?v=1717762224" alt="" />
</div>
        </div>
    </section>
</div>



