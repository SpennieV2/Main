<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>
<script>
    // Get the current URL path
    const path = window.location.pathname;

    // Define the pattern to match the old URL format with any name
    const oldPattern = /^\/([a-zA-Z]+)\/(\d+)$/;

    // Check if the current path matches the old pattern
    const match = path.match(oldPattern);

    // If it matches, redirect to the new URL format
    if (match) {
        const newUrl = `/pages/my-registry/${match[2]}`;
        window.location.replace(newUrl);
    }
</script>

<div class="template-404 page-width page-margin center">
  <p>
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
  <a href="{{ routes.all_products_collection_url }}" class="button">
    {{ 'general.continue_shopping' | t }}
  </a>
</div>
